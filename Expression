#include<iostream>
using namespace std;
int main(){
    int a,b,c;
    cin>>a>>b>>c;
    int d,e,f,g,h,i;
    d=a*b*c;
    e=(a+b)*c;
    f=a*(b+c);
    g=a+(b*c);
    h=(a*b)+c;
    i=a+b+c;
    if(d>=e && d>=f && d>=g && d>=h && d>=i){
        cout<<d;
    }
    else if(e>=f && e>=g && e>=h && e>=i){
        cout<<e;
    }
    else if(f>=g && f>=h && f>=i){
        cout<<f;
    }
    else if(g>=h && g>=i){
        cout<<g;
    }
    else if(h>=i){
        cout<<h;
    }
    else{
        cout<<i;
    }
}
